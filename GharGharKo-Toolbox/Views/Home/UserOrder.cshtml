@model List<GharToolBax.ViewModels.OrderDetailViewModel>
@{
    ViewBag.Title = "UserOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h3 class="section-sub-title">My Problems</h3>

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-12">


                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                S.No
                            </th>
                            <th>
                                Problem
                            </th>
                            <th>
                                Order Date
                            </th>
                            <th>
                                Is Completed
                            </th>
                            <th>
                                Feedback
                            </th>
                            <th>Post Feedback</th>
                        </tr>
                        <tbody>
                            @{ int i = 0;}
                            @foreach (var item in Model)
                            {
                                i++;
                            <tr>
                                @*<th scope="row">@item.Id</th>*@
                                <td>@i</td>
                                <td>@item.Problem</td>
                                <td>@item.OrderDate</td>
                                <td>
                                    @if (item.IsCompleted == false)
                                    {

                                        <span class="text-success">Yes</span>
                                    }
                                    else
                                    {

                                        <span class="text-danger">No</span>
                                        <a href="@Url.Action("Completed" , "Home" , new { id = item.Id})"> Yes </a>
                                    }
                                </td>

                                <td><textarea  placeholder="FeedBack" id="@item.Id"></textarea></td>
                                <td><input type="button" value="Post" onclick="PostFeedback(@item.Id)" /></td>
                            </tr>
                            }
                        </tbody>


                    </table>
                </div>



            </div>
        </div>

    </div>



</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    console.log("javascript is working");

    function PlaceOrder(Id) {

        debugger;
        var problemState = $("[name=ProblemState]").val();

        window.location.href = "/OrderPlace/PlaceOrder?ProfessionalId=" + Id + "&ProblemState=" + problemState;

    }
    function PostFeedback(id) {

        var feedback = $("#" + id + "").val();
        window.location.href = "/Home/GiveFeedback?id=" + id + "&FeedBack=" + feedback;
    }
</script>

