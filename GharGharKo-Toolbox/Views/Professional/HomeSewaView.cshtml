<script type="text/javascript">
    console.log("javascript is working");

    function PlaceOrder(Id) {

        debugger;
        var problemState = $("[name=ProblemState]").val();

        window.location.href = "/OrderPlace/PlaceOrder?ProfessionalId=" + Id + "&ProblemState=" + problemState;

    }

    function ShowFeedback(text) {

        $("#feedback").text(text);
        $("#modalFeed").modal('show');
    }
</script>
